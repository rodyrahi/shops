<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Invoice</title>
  <style>
    body {
      padding: 20px;
    }

    @media print {
      body {
        padding: 0;
      }

      @page {
        size: A4;
      }
    }
  </style>
</head>
<body>

<div class="container">
    

    
  <div class="row">
    <div class="col-md-6">
      <h2>Invoice</h2>
    </div>
    <div class="col-md-6 text-end">
        <form  hx-post="/sendmessage" hx-target="this">
            <input type="text" class="d-none" name="number" value="<%= customer.contact %>">
            <input type="text" class=" form-control form-control-sm" name="message" value="your bill is done ✔">
            <button type="submit" class="btn btn-success">Send Whatsapp</button>
        
          </form>
      <button class="btn btn-primary" onclick="window.print()">Print</button>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-6">
      <h5>From:</h5>
      <address>
        Your Company Name<br>
        Street Address<br>
        City, State, Zip<br>
        Phone: (123) 456-7890<br>
        Email: info@example.com
      </address>
    </div>
    <div class="col-md-6 text-end">
      <h5>To:</h5>
      <address>
        Client Name<br>
        Street Address<br>
        City, State, Zip<br>
        Phone: (987) 654-3210<br>
        Email: client@example.com
      </address>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Description</th>
        <th scope="col">Quantity</th>
        <th scope="col">Rate</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
        <% sales.forEach(element => { %>
        
            <tr>
      
                <td><%=element.desc%></td>
                <td><%=element.qty%></td>
                <td>₹<%=element.rate%></td>
                <td>₹<%=element.amount%></td>
              </tr>
        <% }) %>
    
      <tr>
        <td colspan="3" class="text-end"><strong>Total</strong></td>
        <td><strong>₹<%= bill.balanceAmount %></strong></td>
      </tr>
    </tbody>
  </table>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
