<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://unpkg.com/htmx.org@1.9.8"></script>
</head>
<style>
    .customer:hover{
        border: 2px rgb(57, 176, 255) solid;
    }
    .customer{

        border: 2px rgb(9, 60, 136)solid;
    }
</style>



<body>
    <%- include('./partials/navbar.ejs') %>


    
    <div class="container-fluid">
        <div class="row" id="" > 
            
            <div class="col-md-5 d-flex  flex-column flex-md-row  border  " >
                <div class="m-2">
                    <a  type="button" class="btn btn-primary  "  data-bs-toggle="modal" data-bs-target="#exampleModal2" class="btn btn-primary" >Load</a>

                </div>
                <div class="m-2">
                    <a  type="button" class="btn btn-primary  "  data-bs-toggle="modal" data-bs-target="#newmodel" class="btn btn-primary" >New</a>

                </div>

                <div class="text-center">

                 
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
                      <div class="modal-dialog d-flex align-items-center">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Customers</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form hx-post="/specs" hx-target="#items" hx-swap="beforeend">
                
                            <div class="modal-body">
                                

                            
                
                                <% customer.forEach(element => { %>
                                    <div class="mb-2 d-flex  p-2 rounded customer" hx-get="/getcustomer/<%= element.id %>" hx-target="#getcustomer" hx-swap="innerHTML" type="button" data-bs-dismiss="modal">
                                        <h6 class="my-auto" > <%= element.name %> </h6>
                              
                                    </div>
                                <% }) %>
                
                            
                
                            </div>
                            <!-- <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="submit" data-bs-dismiss="modal" class="btn btn-primary" onclick="showsave()">Load</button>
                            </div> -->
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="text-center">

                 
                    <!-- Modal -->
                    <div class="modal fade" id="newmodel" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
                      <div class="modal-dialog d-flex align-items-center">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add Customers</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form hx-post="/addcustomer" hx-target="#getcustomer" hx-swap="innerHTML" >
                
                            <div class="modal-body">
                                
                                <div class="mb-3">
                                    <!-- <label for="" class="form-label">Code</label> -->
                                    <input type="text" class="form-control mb-3" name="code" id=""  placeholder="Code">
                                    <!-- <label for="" class="form-label">Name</label> -->
                                    <input type="text" class="form-control mb-3" name="name" id=""  placeholder="Name">
                                    <!-- <label for="" class="form-label">Contact</label> -->
                                    <input type="text" class="form-control mb-3" name="contact" id=""  placeholder="Contact">
                                    <!-- <label for="" class="form-label">Contact</label> -->
                                    <input type="email" class="form-control mb-3" name="email" id=""  placeholder="email">
                                    <!-- <label for="" class="form-label">Date Of Birth</label> -->
                                    <input type="text" class="form-control mb-3" name="dob" id=""  placeholder="Date Of Birth">
                                    <!-- <label for="" class="form-label">Age</label> -->
                                    <input type="text" class="form-control mb-3" name="age" id=""  placeholder="Age">
                                    <!-- <label for="" class="form-label">Family Head</label> -->
                                    <input type="text" class="form-control mb-3" name="head" id=""  placeholder="Family Head">
                                    <!-- <label for="" class="form-label">Address</label> -->
                                    <input type="text" class="form-control mb-3" name="address" id=""  placeholder="Address">
                                    <!-- <label for="" class="form-label">City</label> -->
                                    <input type="text" class="form-control mb-3" name="city" id=""  placeholder="City">
                                    <!-- <label for="" class="form-label">Pin Code</label> -->
                                    <input type="text" class="form-control mb-3" name="pincode" id=""  placeholder="Pin Code">
                    
                                </div>
                            

                
                            
                
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="submit" data-bs-dismiss="modal" class="btn btn-primary" >Create</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                
            </div>
            <div class="col-md-7 border p-2" >
                <input type="text" class="form-control" placeholder="Search...">


            </div>

        </div>

        <div class="row" id="getcustomer">
           
              
        </div>

    </div>

</body>
</html>